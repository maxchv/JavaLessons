<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="basicMessageOfDay" class="org.itstep.service.BasicMessageOfTheDayImpl" scope="prototype">
        <property name="message" value="Hello from the Den"/>
    </bean>


    <bean id="dynamicMessageOfDay" class="org.itstep.service.DynamicMessageOfTheDayImpl">
        <constructor-arg>
            <array>
                <ref bean="1"/>
                <ref bean="2"/>
                <ref bean="3"/>
                <ref bean="4"/>
                <ref bean="5"/>
                <ref bean="6"/>
                <ref bean="7"/>
            </array>
        </constructor-arg>
    </bean>


    <bean id="printer" class="org.itstep.service.MessagePrinter">
        <constructor-arg index="0" value="My Printer Service"/>
        <constructor-arg index="1" value=">>"/>
        <constructor-arg index="2" ref="dynamicMessageOfDay"/>
    </bean>

    <!-- Message Value objects -->
    <bean id="1" class="org.itstep.model.MessageValue">
        <constructor-arg value="Sunday morning message!"/>
    </bean>

    <bean id="2" class="org.itstep.model.MessageValue">
        <constructor-arg value="Monday morning message!"/>
    </bean>

    <bean id="3" class="org.itstep.model.MessageValue">
        <constructor-arg value="Tuesday morning message!"/>
    </bean>

    <bean id="4" class="org.itstep.model.MessageValue">
        <constructor-arg value="Wednesday morning message!"/>
    </bean>

    <bean id="5" class="org.itstep.model.MessageValue">
        <constructor-arg value="Thursday morning message!"/>
    </bean>

    <bean id="6" class="org.itstep.model.MessageValue">
        <constructor-arg value="Friday morning message!"/>
    </bean>

    <bean id="7" class="org.itstep.model.MessageValue">
        <constructor-arg value="Saturday morning message!"/>
    </bean>


</beans>
